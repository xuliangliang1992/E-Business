<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/gray</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="dialogWindowAnim" parent="android:Animation">
        <!--<item name="android:windowEnterAnimation">@anim/dialog_anim</item>-->
        <item name="android:windowExitAnimation">@anim/dialog_anim_exit</item>
    </style>

    <!--默认宽度全屏 高度自适应 左右内边距30-->
    <style name="base_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_left_right</item>
        <item name="android:paddingEnd">@dimen/padding_left_right</item>
        <item name="android:paddingTop">@dimen/padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/padding_top_bottom</item>
    </style>

    <!--我的-->
    <style name="mine_text_view" parent="base_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:textColor">@color/black_3</item>
        <item name="android:drawableEnd">@drawable/arrow</item>
    </style>

    <style name="viewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y2</item>
        <item name="android:background">@color/divide_color</item>
    </style>

    <style name="viewLineMarginLeftRight" parent="viewLine">
        <item name="android:layout_marginEnd">@dimen/padding_left_right</item>
        <item name="android:layout_marginStart">@dimen/padding_left_right</item>
    </style>

    <style name="viewLineMarginLeftRight_80" parent="viewLine">
        <item name="android:layout_marginEnd">@dimen/x80</item>
        <item name="android:layout_marginStart">@dimen/x80</item>
    </style>

    <style name="mine_linear_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingBottom">@dimen/padding_top_bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/padding_top_bottom</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="mine_linear_layout_text_view">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/y10</item>
    </style>

    <style name="setting_left_text" parent="base_text">
        <item name="android:layout_width">@dimen/x240</item>
        <item name="android:layout_marginStart">@dimen/padding_left_right</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="setting_right_text" parent="base_text">
        <item name="android:layout_marginEnd">@dimen/padding_left_right</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center_vertical|end</item>
    </style>

    <style name="modify_password_edit_text" parent="base_text">
        <item name="android:background">@null</item>
        <item name="android:layout_marginLeft">@dimen/x50</item>
        <item name="android:layout_marginRight">@dimen/x50</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:textColorHint">@color/hint</item>

    </style>

    <style name="button" parent="base_text">
        <item name="android:layout_marginEnd">@dimen/x80</item>
        <item name="android:layout_marginStart">@dimen/x80</item>
        <item name="android:textSize">@dimen/text_size_34</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
