<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!--我的-->
    <style name="meTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:drawableEnd">@drawable/arrow</item>
        <item name="android:paddingBottom">@dimen/padding_top_bottom</item>
        <item name="android:paddingTop">@dimen/padding_top_bottom</item>
        <item name="android:paddingEnd">@dimen/padding_left_right</item>
        <item name="android:paddingStart">@dimen/padding_left_right</item>
    </style>

    <style name="viewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
        <item name="android:background">@color/black_c</item>
    </style>

    <style name="viewLineMarginLeftRight" parent="viewLine">
        <item name="android:layout_marginEnd">@dimen/padding_left_right</item>
        <item name="android:layout_marginStart">@dimen/padding_left_right</item>
    </style>

    <style name="meLinearLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingBottom">@dimen/padding_top_bottom</item>
        <item name="android:paddingTop">@dimen/padding_top_bottom</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="meLinearLayoutTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/y10</item>
    </style>
</resources>
