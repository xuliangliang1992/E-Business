<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <CheckBox
        android:id="@+id/cb_choose"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/padding_left_right"
        android:gravity="center"
        android:drawableStart="@drawable/selector_cb_all_choose"
        android:visibility="gone"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_left_right"
        android:layout_marginStart="@dimen/padding_left_right"
        android:paddingBottom="@dimen/y10"
        android:paddingTop="@dimen/padding_top_bottom"
        android:textColor="@color/black_3"
        tools:text="sdadas"
        android:textSize="@dimen/text_size_32"
        app:layout_constraintEnd_toStartOf="@+id/tv_date"
        app:layout_constraintStart_toEndOf="@+id/cb_choose" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_left_right"
        android:paddingBottom="@dimen/y10"
        android:paddingTop="@dimen/padding_top_bottom"
        android:textColor="@color/black_b7"
        tools:text="sdadas"
        android:textSize="@dimen/text_size_26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_left_right"
        android:layout_marginStart="@dimen/padding_left_right"
        android:singleLine="true"
        android:textColor="@color/black_7"
        android:textSize="@dimen/text_size_26"
        tools:text="sdadas"
        app:layout_constraintEnd_toStartOf="@+id/tv_read"
        app:layout_constraintStart_toEndOf="@+id/cb_choose"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_read"
        android:layout_width="@dimen/x18"
        android:layout_height="@dimen/y18"
        android:layout_marginEnd="@dimen/padding_left_right"
        android:background="@drawable/shape_circle"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_content"
        app:layout_constraintTop_toTopOf="@+id/tv_content" />
</android.support.constraint.ConstraintLayout>