<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_old_password"
        style="@style/modify_password_edit_text"
        android:hint="输入旧密码"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/et_new_password"
        style="@style/modify_password_edit_text"
        android:hint="设置新密码"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_old_password"
        />

    <EditText
        android:id="@+id/et_new_password_again"
        style="@style/modify_password_edit_text"
        android:hint="再次确认新密码"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_new_password"

        />

    <Button
        style="@style/base_text"
        android:text="确认"
        app:layout_constraintTop_toBottomOf="@+id/et_new_password_again"
        />
</android.support.constraint.ConstraintLayout>