<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/y20"
            android:text="@string/mine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            style="@style/viewLine"
            app:layout_constraintTop_toBottomOf="@id/tv_title"/>

        <RelativeLayout
            android:id="@+id/rl_not_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/y30"
            android:paddingTop="@dimen/y30"
            app:layout_constraintTop_toBottomOf="@id/tv_title">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/x150"
                android:layout_height="@dimen/y150"
                android:layout_marginStart="@dimen/x50"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_head"
                android:text="@string/login_register"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/y30"
            android:paddingTop="@dimen/y30"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/rl_not_login">

            <ImageView
                android:id="@+id/iv_head_portrait"
                android:layout_width="@dimen/x150"
                android:layout_height="@dimen/y150"
                android:layout_marginStart="@dimen/x50"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_head_portrait"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow"/>
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_login">

            <View style="@style/viewLine"/>

            <LinearLayout
                android:id="@+id/rl_collectibles"
                style="@style/meLinearLayout"
                app:layout_constraintEnd_toStartOf="@+id/rl_collection_shop"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    style="@style/meLinearLayoutTextView"
                    android:text="@string/collectibles"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_collection_shop"
                style="@style/meLinearLayout"
                app:layout_constraintEnd_toStartOf="@+id/rl_orders"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/rl_collectibles">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    style="@style/meLinearLayoutTextView"
                    android:text="@string/collection_shop"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_orders"
                style="@style/meLinearLayout"
                app:layout_constraintEnd_toStartOf="@+id/rl_message"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/rl_collection_shop">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    style="@style/meLinearLayoutTextView"
                    android:text="@string/my_orders"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_message"
                style="@style/meLinearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/rl_orders">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    style="@style/meLinearLayoutTextView"
                    android:text="@string/message_list"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_modify_password"
                style="@style/meTextView"
                android:text="@string/modify_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rl_collectibles"/>

            <View
                style="@style/viewLineMarginLeftRight"
                app:layout_constraintTop_toBottomOf="@+id/tv_modify_password"/>

            <TextView
                android:id="@+id/tv_shipping_address"
                style="@style/meTextView"
                android:text="@string/shipping_address"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_modify_password"/>

            <View
                style="@style/viewLineMarginLeftRight"
                app:layout_constraintTop_toBottomOf="@+id/tv_shipping_address"/>

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tv_about_company"
            style="@style/meTextView"
            android:text="@string/about_company"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_login"/>

        <View
            style="@style/viewLineMarginLeftRight"
            app:layout_constraintTop_toBottomOf="@+id/tv_about_company"/>

        <TextView
            android:id="@+id/tv_FAQ"
            style="@style/meTextView"
            android:text="@string/FAQ"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_about_company"/>

        <View
            style="@style/viewLineMarginLeftRight"
            app:layout_constraintTop_toBottomOf="@+id/tv_FAQ"/>

        <TextView
            android:id="@+id/tv_feedback"
            style="@style/meTextView"
            android:text="@string/feedback"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_FAQ"/>

        <View
            style="@style/viewLineMarginLeftRight"
            app:layout_constraintTop_toBottomOf="@+id/tv_feedback"/>

        <TextView
            style="@style/meTextView"
            android:drawableEnd="@null"
            android:text="@string/language_switch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_feedback"/>

        <TextView
            android:id="@+id/tv_language"
            style="@style/meTextView"
            android:drawableEnd="@null"
            android:gravity="center_vertical|end"
            android:text="@string/language_chinese"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_feedback"/>

        <View
            style="@style/viewLineMarginLeftRight"
            app:layout_constraintTop_toBottomOf="@+id/tv_language"/>

        <TextView
            android:id="@+id/tv_new_guidelines"
            style="@style/meTextView"
            android:text="@string/new_guidelines"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_language"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>